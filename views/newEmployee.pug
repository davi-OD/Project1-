extend layout 
block content 
    div.container.border.center
        header.card-header
            h4.card-title Add Employee 
        form(method="POST" action='/newEmployee')
            div.form.row
                div.col.form-group
                    label First name 
                    input.form-control(name="firstname")
                div.col.form-group
                    label Last name
                    input.form-control(name="lastname")
                div.col.form-group
                    label User name
                    input.form-control(name="username", placeholder="STK0000")
            div.form.row
                div.col.form-group
                    label Date of Birth 
                        input(type="date", name="dob")
                div.col.form-group    
                    label Age 
                        input(type="number", name="age")    
                div.col.form-group    
                    label Gender
                    div     
                        label.form-check.form-check-inline
                            input.form-check-input(type="radio" name="gender" value="female")
                            span.form-check-label Female 
                        label.form-check.form-check-inline
                            input.form-check-input(type="radio" name="gender" value="male")
                            span.form-check-label Male 
            div.form.row    
                div.col.form-group
                    label NIN 
                        input(type="text")
                    label Residence 
                        input(type="text")    
                div.col.form-group
                    label Role 
                    select.form-control(name="role")
                        option(value="driver")  Driver
                        option(value="conductor") Conductor

                div.col.form-group
                    label Driving license Number 
                        input(type="number", name="license")
                
                    label Past incidences 
                    div
                        label.form-check.form-check-inline 
                            span.form-check-label accidents    &nbsp
                            input.form-check-input(type="checkbox" checked name="pastincidence" value="accidents")
                        label.form-check.form-check-inline 
                            span.form-check-label fights   &nbsp
                            input.form-check-input(type="checkbox" checked name="pastincidence" value="fights")
                        label.form-check.form-check-inline 
                            span.form-check-label fuel thefts &nbsp
                            input.form-check-input(type="checkbox" checked name="pastincidence" value="fuelthefts")
                div.form.row
                    div.col.form-group
                        label Upload image
                            input(type='file', name='imageupload')
                
                div.form.row
                    div.col.form-group
                        button.btn.btn-primary.btn-block Register Employee
        